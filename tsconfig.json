{
  "compilerOptions": {
    "target": "es6",
    "rootDir": "src",
    "module": "commonjs",
    "baseUrl": ".",
    "moduleResolution": "node",
    "sourceMap": true,
    "declarationMap": true,
    "inlineSources": false,
    "declaration": true,
    "stripInternal": true,
    "lib": [
      "es2016",
      "dom"
    ],
    "strict": true,
    "strictNullChecks": false,
    "noImplicitReturns": true,
    "noUnusedLocals": false, // for development
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "paths": {
      "*": [
        "node_modules/*",
        "src/shared/types/*"
      ]
    }
  },
  "include": [
    "src"
  ],
}
