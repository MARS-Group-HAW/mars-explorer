{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "es6",
    "rootDir": "src",
    "module": "commonjs",
    "baseUrl": "src",
    "moduleResolution": "node",
    "sourceMap": true,
    "declarationMap": true,
    "inlineSources": false,
    "declaration": true,
    "stripInternal": true,
    "lib": ["es2016", "dom"],
    "strict": true,
    "strictNullChecks": false,
    "noImplicitReturns": true,
    "noUnusedLocals": false, // for development
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "paths": {
      "@app/*": ["app/*"],
      "@shared/*": ["shared/*"],
      "*": ["node_modules/*"]
    }
  },
  "include": ["src"]
}
